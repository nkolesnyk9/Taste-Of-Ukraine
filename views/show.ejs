<%- include('./partials/header.ejs') %>
<div class="centerPage">
 <h1><%= recipe.name %></h1>
<div class="showPage">

<div class="leftPart">
    <h2><%= recipe.name %></h2>
    <img src="<%=recipe.image%>" alt="picture">
    <div class="container">
    <h3>Ingredients:</h3> 
    <% let ingredients = recipe.ingredients  %>
     
         <ul  class="showUl"> 
            <% for(ingredient of ingredients) { %>
                <li> <%=ingredient%> </li>
            <% } %>
         </ul>     
</div>
</div>

<div class="rightPart">
    <p><h3>Directions:</h3>
        <br>
        <% let directions = recipe.directions %>
        <ul class="showUl">
            <% for(direction of directions) { %>
                <li><%=direction%></li>
           <% } %>
        </ul>   
</div>

<a class="editButton" href="/recipes/<%=recipe._id %>/edit"> ✍️ Add Notes</a> 
</div>
</div>

<form action="/recipes/<%=recipe._id%>?_method=DELETE" method="POST"> 
    <input type="submit" value="DELETE"/>
</form> 


<br>

<a href="/recipes"> Back to Main Page</a>

